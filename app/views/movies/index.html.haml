-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :id => 'ratings_form', :method => :get do
  Include:
  - @all.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, if params[:ratings]; params[:ratings].include?(rating) end
  = submit_tag 'Refresh', :id => 'ratings_submit'

%table#movies
  %thead
    %tr
      %th.title_header{:class => @title_sorted}
        = link_to 'Movie Title', {:sort => "title"}, {:ratings => params[:ratings]}
      %th Rating
      %th.release_date_header{:class => @date_sorted} 
        = link_to 'Release Date', {:sort => "release_date"}, {:ratings => params[:ratings]}
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
